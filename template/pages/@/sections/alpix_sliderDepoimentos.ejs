<% 

if(opt.testimonials){
%>
<section id="testimonials" class="my-5 pb-md-5 pb-3">
    <div class="container">
      <div class="row mb-md-5 mb-4 pb-md-4 pb-3">
        <div class="col-12 col-md-6">
          <h3 class="a_title medel a_h3">
            <%- opt.title %>
          </h3>
          <small class="a_sub font-light  d-block">
            <%- opt.description %>
          </small>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div id="testimonials-slider">            
            <% for (let i = 0; i < opt.testimonials.length; i++ ) { %>
              <div class="item">
                <div class="img">
                  <img src="<%- opt.testimonials[i].testimonial.image %>" alt="">
                </div>
                <strong class="text-primary text-center d-block my-4 pt-2 a_text"><%- opt.testimonials[i].testimonial.name %></strong>
                <p class="a_p">
                    <%- opt.testimonials[i].testimonial.text %>
                </p>
              </div>
            <% } %>                          
          </div>
        </div>
      </div>
    </div>
  </section>
  <% } %>
<%
// load footer options and contacts from content
const footer = _.cms('footer') || {}
const contacts = _.cms('contacts') || {}
%>


<footer class="footer pt-4">
  <div class="container">
    <div class="row my-4">
      <div class="col text-center align-items-center  justify-content-center d-flex">
        <img src="/img/uploads/logo_acnatti.png" alt="">
      </div>
    </div>
    <div class="row my-4">
      <div class="col">
        <% if (footer.contacts.socials) { %>
          <p class="footer__social align-items-center justify-content-center d-flex">
            <%- await include('@/layout/inc/networks', { _, contacts }) %>
          </p>
        <% } %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col justify-content-center">
        <% if (footer.links_1.list_pages || footer.links_1.list.find(({ url }) => url)) { %>
            <div id="footer-pages">
              <% if (footer.links_1.list_pages) { %>
                <ul class="footer__links d-flex justify-content-center align-items-center">
                  <% (_.cms('pages') || []).forEach(slug => { %>
                    <% const { title } = _.cms(`pages/${slug}`) %>
                    <li>
                      <a href="/pages/<%= slug %>">
                        <%= title %>
                      </a>
                    </li>
                  <% }) %>
                </ul>
              <% } else { %>
                <ul class="footer__links d-flex justify-content-center align-items-center">
                  <% footer.links_1.list.forEach(({ url, text }) => { %>
                    <li>
                      <a href="<%= url %>">
                        <%= text %>
                      </a>
                    </li>
                  <% }) %>
                </ul>
              <% } %>
            </div>
          
        <% } %>
      </div>
    </div>
    <div class="row">
      <div class="col ">
        <div class="footer__credits justify-content-center align-items-center pt-4">
          <span class="text-c">
            <%= footer.credits || `Â© ${_.store.name} / ${contacts.address} / ${contacts.doc_number}` %>
          </span>
        </div>
        <div>
          <%- await include('@/layout/inc/ecom-credits') %>
        </div>
      </div>
    </div>
  </div>

